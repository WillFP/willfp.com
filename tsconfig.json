{
    "compilerOptions": {
        "noEmit": true,
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "paths": {
            "@project/common": [ "../common/src" ],
            "@project/common/*": [ "../common/src/*" ]
        }
    }
}